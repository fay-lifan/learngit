@{
    ViewBag.Title = "DefaultActivityConfigures";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    int number = 1;
}
@using TLZ.OldSite.WebSite.Admin.Models;
@using TLZ.OldSite.DB.MongoDB.Model;

@model List<ActivityConfigures>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">活动配置列表</div>
    @*<div class="panel-body">
            <h3></h3>
        </div>*@
    <!-- Table -->
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover" contenteditable="true">
            <thead>
                <tr>
                    <th width="5%">编号</th>
                    <th width="15%">活动名称</th>
                    <th width="10%">进程名称</th>
                    <th width="10%">活动间隔(毫秒)</th>
                    <th width="10%">阈值</th>
                    <th width="10%">邮件</th>
                    <th width="10%">短信</th>
                    <th width="15%">时间</th>
                    <th width="15%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
            <tr>
                <td>@Html.Raw(number++)</td>
                <td>@item.ActivityName</td>
                <td>@item.ProcessName</td>
                <td>@item.TntervalSecond</td>
                <td>@item.Threshold</td>
                <td>@Html.Raw(item.isEmail == true ? "是" : "否")</td>
                <td>@Html.Raw(item.isSMS == true ? "是" : "否")</td>
                <td>@item.DateTimeNow.ToString("yyyy年MM月dd日")</td>
                <td>
                    <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮1</button>
                    <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮2</button>
                    <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮3</button>
                </td>
            </tr>
            }
            </tbody>
        </table>
    }
    <div class="panel-footer">
        <div id="page_basepagemodel">
            @Html.Partial("BasePageModel", ViewData["pagemodel"])
        </div>
    </div>
</div>