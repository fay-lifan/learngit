@{
    ViewBag.Title = "DefaultSystemInternetPage";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    int number = 1;
}
@using TLZ.OldSite.WebSite.Admin.Models;
@using TLZ.OldSite.DB.MongoDB.Model;

@model List<SystemInternet>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">系统网络记录列表</div>
    @*<div class="panel-body">
            <h3></h3>
        </div>*@
    <!-- Table -->
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover" contenteditable="true">
            <thead>
                <tr>
                    <th width="5%">编号</th>
                    <th width="15%">适配器名称</th>
                    <th width="10%">网卡类型</th>
                    <th width="10%">总下载字节</th>
                    <th width="10%">总上传字节</th>
                    <th width="10%">下载字节</th>
                    <th width="10%">上传字节</th>
                    <th width="15%">时间</th>
                    <th width="15%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(number++)</td>
                        <td>@item.InternetName</td>
                        <td>@item.InternetType</td>
                        <td>@item.ALLDownloadByte</td>
                        <td>@item.AllUpLoadByte</td>
                        <td>@item.DownloadByte</td>
                        <td>@item.UploadByte</td>
                        <td>@item.DateTimeNow.ToString("yyyy年MM月dd日")</td>
                        <td>
                            <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮1</button>
                            <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮2</button>
                            <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">按钮3</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="panel-footer">
        <div id="page_basepagemodel">
            @Html.Partial("BasePageModel", ViewData["pagemodel"])
        </div>
    </div>
</div>