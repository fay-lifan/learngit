@{
    ViewBag.Title = "DefaultSystenPingPage";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    int number = 1;
}
@using TLZ.OldSite.WebSite.Admin.Models;
@using TLZ.OldSite.DB.MongoDB.Model;

@model List<SystemPing>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">服务器ping列表</div>
    @*<div class="panel-body">
            <h3></h3>
        </div>*@
    <!-- Table -->
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover" contenteditable="true">
            <thead>
                <tr>
                    <th width="5%">编号</th>
                    <th width="10%">发起IP</th>
                    <th width="10%">指向IP</th>
                    <th width="8%">状态</th>
                    <th width="5%">字节</th>
                    <th width="5%">时间</th>
                    <th width="5%">TTL</th>
                    <th width="5%">已发送</th>
                    <th width="5%">已接受</th>
                    <th width="5%">丢失</th>
                    <th width="5%">丢失率</th>
                    <th width="10%">所在区域</th>
                    <th width="10%">时间</th>
                    <th width="12%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(number++)</td>
                        <td>@item.ThisIP</td>
                        <td>@item.PingIP</td>
                        <td>@item.Status</td>
                        <td>@item.PingByte</td>
                        <td>@Html.Raw(item.PingDate)ms</td>
                        <td>@item.PingTTL</td>
                        <td>@item.PingFaSong</td>
                        <td>@item.PingJieShou</td>
                        <td>@item.PingDiuShi</td>
                        <td>@item.PingDiuShiLv</td>
                        <td>@item.SystemAddress</td>
                        <td>@item.DateTimeNow.ToString("yyyy年MM月dd日")</td>
                        <td>
                            <button class="btn btn-link btn-large" type="button" contenteditable="true" role="button">查看</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="panel-footer">
        <div id="page_basepagemodel">
            @Html.Partial("BasePageModel", ViewData["pagemodel"])
        </div>
    </div>
</div>