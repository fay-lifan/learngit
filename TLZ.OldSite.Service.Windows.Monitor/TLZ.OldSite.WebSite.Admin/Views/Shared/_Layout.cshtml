<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>后台管理系统</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/framecss")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/framejs")

    <!--bootstrap脚本无法采用MVC自带的脚本压缩、会报错-->
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    @RenderSection("heads", required: false)
</head>
<body>
    @Html.Action("DefaultHeader", "Default")
    @Html.Action("DefaultLeftMenu", "Default")
    @RenderBody()
    @RenderSection("footers", required: false)
    @RenderPage("~/Views/RenderSection/Footers.cshtml")
</body>
</html>
